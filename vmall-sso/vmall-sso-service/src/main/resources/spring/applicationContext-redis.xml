                <bean class="redis.clients.jedis.HostAndPort">
                    <constructor-arg name="host" value="192.168.3.23"/>
                    <constructor-arg name="port" value="6380"/>
                </bean>
            </set>
        </constructor-arg>
    </bean>
    <bean id="jedisClientCluster" class="com.vmall.jedis.JedisClientCluster"/>
